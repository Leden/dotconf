Config
    { bgColor = "black"
    , fgColor = "grey"
    , position = TopW L 90
    , font = "xft:Anonymous Pro:size=10:antialias=true"
    , commands =
        [ Run Kbd [("us", "US"), ("ru", "RU")]
        , Run StdinReader
        , Run Date "[%a %F %H:%M]" "theDate" 60
        , Run Com "curl" ["http://wttr.in/Vilnius?format=%l:+%C+%t"] "wttr" 120
        , Run Com "myip" [] "ip" 120
        , Run Com "colorgen" [] "c1" 120
        , Run Com "colorgen" [] "c2" 120
        , Run Com "colorgen" [] "c3" 120
        , Run Com "colorgen" [] "c4" 120
        , Run Com "colorgen" [] "c5" 120
        , Run Battery
            [ "-t", "<acstatus>"
            , "--"
            , "-O", "Charging <left>% <timeleft>"
            , "-o", "Battery <left>% <timeleft>"
            , "-i", "Full <left>% <timeleft>"
            ] 10
        ]
    , template = "%StdinReader% }{ <fc=%c1%>[%battery%]</fc> <fc=%c2%>[%kbd%]</fc> <fc=%c3%>[%wttr%]</fc> <fc=%c4%>[%ip%]</fc> <fc=%c5%>%theDate%</fc>"
    }
